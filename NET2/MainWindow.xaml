<Window x:Class="NET2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NET2"
        xmlns:converter="clr-namespace:NET2"
        mc:Ignorable="d"
        Title="MainWindow">
    <Window.Resources>
        <converter:IntHoursConverter x:Key="IntHoursConverter"/>
        <DataTemplate x:Key="SubjectTemplate">
            <Grid Name="Row">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Padding="1" Grid.Column="0" BorderThickness="1" BorderBrush="Black">
                    <TextBlock x:Name="SubjectName" Text="{Binding Name}"/>
                </Border>
                <Border Padding="1" Grid.Column="1" BorderThickness="1" BorderBrush="Black">
                    <TextBlock x:Name="Teacher" Text="{Binding Teacher}"/>
                </Border>
                <Border Padding="1" Grid.Column="2" BorderThickness="1" BorderBrush="Black">
                    <TextBlock x:Name="Hours" Text="{Binding Hours}"/>
                </Border>
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding HoursComparasion}" Value="Equal">
                    <Setter TargetName="Row" Property="Background" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding HoursComparasion}" Value="Less">
                    <Setter TargetName="Row" Property="Background" Value="Red"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding HoursComparasion}" Value="Equal">
                    <Setter TargetName="Row" Property="Background" Value="Yellow"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Padding" Value="2"></Setter>
            <Setter Property="BorderBrush" Value="Gray"></Setter>
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Padding" Value="2"></Setter>
            <Setter Property="BorderBrush" Value="Gray"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="Фильтр часов:">
                
            </TextBlock>
            <TextBox VerticalAlignment="Center" Width="100"></TextBox>
            <TextBox VerticalAlignment="Center" Width="100"></TextBox>
        </StackPanel>
        <ListBox Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Subjects}"
                 SelectedItem="{Binding SelectedSubject}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="16" Text="{Binding Path=Name}"/>
                        <TextBlock Text="{Binding Path=Teacher}"/>
                        <TextBlock Text="{Binding Path=Category}"/>
                        <TextBlock Text="{Binding Path=Hours, Converter={StaticResource IntHoursConverter}}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <StackPanel Grid.Column="1" Grid.Row="1" DataContext="{Binding SelectedSubject}">
            <TextBlock FontSize="20" Text="Редактирование"/>
            <TextBlock Text="Название:"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Преподаватель:"/>
            <TextBox Text="{Binding Teacher, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Количество часов: "/>
            <TextBox Text="{Binding Hours, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Категория"></TextBlock>
            <ComboBox SelectedItem="{Binding Category}" ItemsSource="{Binding CategoryList}"></ComboBox>
            <TextBlock Text="Описание: "></TextBlock>
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Height="100"></TextBox>
        </StackPanel>
    </Grid>
</Window>
